@model Capstone.Models.Card

@{
    ViewData["Title"] = "Add card to deck"; //TODO: Pull in name of deck somehow
}

<h2>AddCard</h2>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCard" asp-route-deckId="@(Model.DeckId)" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Front" class="control-label">Enter the front flashcard text</label>
                <input asp-for="Front" id="front-text" class="form-control" placeholder="Question..."/>
                <span asp-validation-for="Front" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL" class="control-label">Enter a URL to an image</label>
                <input asp-for="ImageURL" id="image-text" class="form-control" placeholder="Image URL..." />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Back" class="control-label">Enter the back flashcard text</label>
                <input asp-for="Back" class="form-control" placeholder="Answer..."/>
                <span asp-validation-for="Back" class="text-danger"></span>
            </div>
            <div id="tags" class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags[0]" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <button id="AddNewTag">Add Another Tag</button>

            <input type="hidden" asp-for="CardOrder" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/Decks/AddCard.js"></script>
